extends layout

block content
  h1= title
  p= message

  div(class='formContainer')
    form(method='POST' action='')
      div.form-group
        label(for='userName') UserName:
        input#username.form-control(type='text', placeholder='User Name' name='username' value=(undefined===log_in ? '' : log_in.userName) required='true')
      div.form-group
        label(for='password') Password:
        input#password.form-control(type='text', placeholder='Password' name='password' value=(undefined===log_in ? '' : log_in.password) required='true')
    
      button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
