extends layout

block content
  h1= title
 

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Title' name='title' value=(undefined===sign_in ? '' : sign_in.title) required='true')
    div.form-group
      label(for='text') Text:
      textarea#text.form-control(type='textarea', placeholder='Text' name='text' required='true') #{undefined===sign_in ? '' : sign_in.text}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg